        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".IndexActivity" />
        <activity
            android:name=".PostPopupActivity"
            android:theme="@style/mytheme"></activity>
    </application>

</manifest>