<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="10dp" />
                    <solid
                        android:color="#E8E8EA" />
                </shape>
            </item>
            <item
                android:top="1dp"
                android:bottom="1dp"
                android:right="1dp"
                android:left="1dp">
                <shape>
                    <corners
                        android:radius="9dp" />
                    <solid
                        android:color="#FFFFFF" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item
        android:state_pressed="true">

        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="10dp" />
                    <solid
                        android:color="#C8C8CA" />
                </shape>
            </item>
            <item
                android:top="1dp"
                android:bottom="1dp"
                android:right="1dp"
                android:left="1dp">
                <shape>
                    <corners
                        android:radius="9dp" />
                    <solid
                        android:color="#DFDFDF" />
                </shape>
            </item>
        </layer-list>

    </item>

</selector>